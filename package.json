{
	"name": "nmanager",
	"version": "2.0.0",
	"description": "A network manager cli",
	"main": "dist/index.js",
	"type": "module",
	"homepage": "https://github.com/SirMarkus73/nmanager",
	"repository": {
		"type": "git",
		"url": "https://github.com/SirMarkus73/nmanager"
	},
	"scripts": {
		"build": "shx rm -rf dist && tsc -b && tsc-alias",
		"dev": "tsx ./bin/dev.ts",
		"start": "node ./bin/run.js",
		"version": "oclif readme && git add README.md",
		"postpack": "shx rm -f oclif.manifest.json",
		"posttest": "pnpm run lint",
		"prepack": "oclif manifest && oclif readme",
		"commit": "cz",
		"format": "biome format --write",
		"lint": "biome lint && tsc --noEmit",
		"lint:fix": "biome lint --fix",
		"ci:biome": "biome ci",
		"ci:tsc": "tsc --noEmit",
		"ci": "pnpm run ci:biome && pnpm run ci:tsc"
	},
	"keywords": [
		"cli",
		"network",
		"manager"
	],
	"bin": {
		"nmanager": "./bin/run.js"
	},
	"author": "Marcos Barrero",
	"license": "MIT",
	"packageManager": "pnpm@10.20.0",
	"dependencies": {
		"@inquirer/prompts": "^7.9.0",
		"@oclif/core": "^4",
		"@oclif/plugin-help": "^6",
		"@oclif/plugin-plugins": "^5",
		"ansi-escapes": "^7.1.1",
		"chalk": "^5.6.2",
		"cli-table3": "^0.6.5",
		"nanospinner": "^1.2.2"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@commander-js/extra-typings": "^14.0.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@types/node": "^22.7.5",
		"cz-conventional-changelog": "^3.3.0",
		"oclif": "^4",
		"semantic-release": "^25.0.1",
		"shx": "^0.3.3",
		"ts-node": "^10",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.20.6",
		"typescript": "^5.6.3"
	},
	"files": [
		"./bin",
		"./dist",
		"./oclif.manifest.json"
	],
	"publishConfig": {
		"access": "public"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"pnpm": {
		"overrides": {
			"tmp": "^0.2.4"
		}
	},
	"oclif": {
		"bin": "nmanager",
		"dirname": "nmanager",
		"commands": "./dist/commands",
		"plugins": [
			"@oclif/plugin-help",
			"@oclif/plugin-plugins"
		],
		"topicSeparator": " "
	}
}
